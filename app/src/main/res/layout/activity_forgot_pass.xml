<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_pic2"
    tools:context=".ForgotPassActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_edt_dk"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nhập email của bạn"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_Email"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Nhập tại đây"
            android:inputType="text"
            android:textSize="20dp" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_GuiXacNhan"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/bg_button"
            android:padding="0.5sp"
            android:text="Gửi xác nhận"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_GoBack"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/bg_button_dk"
            android:padding="0.5sp"
            android:text="Quay lại
"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>